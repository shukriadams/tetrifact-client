<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="TetrifactClient.MainWindow"
		xmlns:local="clr-namespace:TetrifactClient;assembly=TetrifactClient"
        mc:Ignorable="d" 
		d:DesignWidth="800" 
		d:DesignHeight="350"
		xmlns:vm="using:TetrifactClient"
		x:DataType="vm:GlobalDataContext"
		ExtendClientAreaToDecorationsHint="True"
		MinWidth="400"
		MinHeight="400"
		Background="Salmon"
        Title="TetrifactClient">
	
	<Window.Background>
		<LinearGradientBrush  StartPoint="0%,100%" EndPoint="100%,0%">
			<GradientStop Offset="0" Color="#555555" />
			<GradientStop Offset="1" Color="#757575" />
		</LinearGradientBrush>
	</Window.Background>
	<DockPanel LastChildFill="True">

		<DockPanel Classes="appLayout" DockPanel.Dock="Left" Width="200">
			<local:ProjectsView DockPanel.Dock="Top" DataContext="{Binding Projects}" />
		</DockPanel>

		<DockPanel Classes="appLayout" DockPanel.Dock="Right" Width="200">
			<local:ConsoleView DockPanel.Dock="Top" DataContext="{Binding Console}" />
		</DockPanel>

		<DockPanel Classes="appLayout" DockPanel.Dock="Left">
			<local:ProjectView DockPanel.Dock="Top" DataContext="{Binding FocusedProject}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />			
		</DockPanel>

		
	</DockPanel>
</Window>
 