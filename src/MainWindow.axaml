<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="TetrifactClient.MainWindow"
		xmlns:local="clr-namespace:TetrifactClient;assembly=TetrifactClient"
        mc:Ignorable="d" 
		d:DesignWidth="800" 
		d:DesignHeight="350"
		xmlns:vm="using:TetrifactClient"
		x:DataType="vm:GlobalDataContext"
		MinWidth="400"
		MinHeight="400"
		Classes="appLayout"
        Title="TetrifactClient">
	
	<DockPanel LastChildFill="True">

		<DockPanel Classes="appLayout" DockPanel.Dock="Left" Width="200" Background="#4F4557">
			<local:ProjectsList DockPanel.Dock="Top" DataContext="{Binding Projects}" />
		</DockPanel>

		<DockPanel Classes="appLayout" DockPanel.Dock="Right" Width="200">
			<Border Padding="10">
				<Button Name="btnOpenConsole" Click="On_Console_Open" DockPanel.Dock="Bottom">Console</Button>
			</Border>
			<Button Click="On_Settings_Open" DockPanel.Dock="Bottom">Settings</Button>
		</DockPanel>

		<DockPanel Classes="appLayout" DockPanel.Dock="Left">
			<Border Padding="10">
				<local:ProjectView DockPanel.Dock="Top" DataContext="{Binding FocusedProject}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
			</Border>
		</DockPanel>
		
	</DockPanel>
</Window>
 