<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="50"
             x:Class="TetrifactClient.ThingToggler">
	<StackPanel>
		<WrapPanel Name="State1">
			<Button Click="ToggleState"> Button 1</Button>
			<TextBlock>
				click me!
			</TextBlock>
		</WrapPanel>
		<WrapPanel Name="State2" IsVisible="False">
			<Button Click="ToggleState"> Button 2</Button>
			<TextBlock>
				Revert me!
			</TextBlock>
		</WrapPanel>
	</StackPanel>
</UserControl>
