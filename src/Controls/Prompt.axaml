<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
		d:DesignWidth="400" 
		d:DesignHeight="250"
        x:Class="TetrifactClient.Prompt"
		Classes="prompt"
        ExtendClientAreaToDecorationsHint="True" 
		ExtendClientAreaChromeHints="NoChrome"
		ExtendClientAreaTitleBarHeightHint="-1"
        Title="Prompt">
	<DockPanel VerticalAlignment="Stretch">
		
		<TextBlock Name="txtHeader" Classes="header1" DockPanel.Dock="Top" HorizontalAlignment="Center">
			Header text
		</TextBlock>

		<StackPanel HorizontalAlignment="Center" DockPanel.Dock="Bottom" Orientation="Horizontal" Background="Beige">
			<Button Name="btnCancel" Click="Cancel_Click" Content="Cancel"></Button>
			<Button Name="btnProceed" Click="Proceed_Click" Classes="proceed" Content="Accept"></Button>
		</StackPanel>

		<TextBlock Name="txtText" Classes="flow-vertical" TextWrapping="Wrap" DockPanel.Dock="Top" HorizontalAlignment="Stretch">
			Prompt text Prompt textPrompt textPrompt textPrompt textPrompt textPrompt textPrompt textPrompt textPrompt textPrompt textPrompt textPrompt text
		</TextBlock>
		
	</DockPanel>
</Window>
