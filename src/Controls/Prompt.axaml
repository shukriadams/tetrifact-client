<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
		d:DesignWidth="400" 
		d:DesignHeight="250"
        x:Class="TetrifactClient.Prompt"
		Classes="dialog nobar">
	<DockPanel>

		<TextBlock Name="txtHeader" Classes="header1 flow-vertical" DockPanel.Dock="Top" HorizontalAlignment="Center">
			Header text
		</TextBlock>

		<StackPanel Classes="flow-vertical" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Orientation="Horizontal">
			<Button Name="btnCancel" Click="Cancel_Click" Content="Cancel"></Button>
			<Button Name="btnProceed" Click="Proceed_Click" Classes="proceed" Content="Accept"></Button>
		</StackPanel>

		<TextBlock Name="txtText" Classes="flow-vertical" TextWrapping="Wrap" DockPanel.Dock="Top" HorizontalAlignment="Stretch">
			Placeholder text	Placeholder text	Placeholder text	Placeholder text	Placeholder text	Placeholder text	Placeholder text	Placeholder text	Placeholder text	Placeholder text	Placeholder text	Placeholder text
		</TextBlock>
		
	</DockPanel>
</Window>
