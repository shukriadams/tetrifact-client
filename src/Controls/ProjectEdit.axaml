<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:TetrifactClient"
		mc:Ignorable="d" 
		d:DesignWidth="600" 
		d:DesignHeight="850"
		x:DataType="vm:ProjectEditorViewModel"
		x:Class="TetrifactClient.Controls.ProjectEdit"
		Classes="dialog"
    	xmlns:local="clr-namespace:TetrifactClient;assembly=TetrifactClient"
        Title="ProjectEditorView">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="50"/>
		</Grid.RowDefinitions>
		<DockPanel Grid.Row="1" DockPanel.Dock="Top">
			<StackPanel DockPanel.Dock="Bottom" Classes="flow-vertical" HorizontalAlignment="Right" Orientation="Horizontal">
				<Button Name="btnCancel" Click="OnCancel">Cancel</Button>
				<Button Name="btnSave" Click="OnSave" Classes="proceed">Save</Button>
			</StackPanel>
		</DockPanel>

		<DockPanel Grid.Row="0">

			<Panel DockPanel.Dock="Top" Classes="flow-vertical">
				<Label Name="lblFormTitle" Classes="header1">Settings for Project [NAME]</Label>
			</Panel>

			<Button Name="btnDeleteProject" DockPanel.Dock="Top" Classes="warning icon" Click="ProjectDelete_Click">
				<Image Classes="icon" Source="/Assets/Images/Trash.png" />
			</Button>

			<StackPanel Name="panelFromTemplate" DockPanel.Dock="Top" Classes="flow-vertical">
				<Label Content="Copy from template" />
				<ComboBox Name="cmbTemplateSource" ItemsSource="{Binding ProjectTemplates.Projects}" SelectedIndex="0" SelectionChanged="OnTemplateSourceChanged">
					<ComboBox.ItemTemplate>
						<DataTemplate x:DataType="vm:Project">
							<TextBox Text="{Binding Name}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
			</StackPanel>

			<StackPanel DockPanel.Dock="Top" Classes="flow-vertical">
				<Label>Name</Label>
				<TextBox Name="txtName" Text="{Binding Project.Name}"></TextBox>
			</StackPanel>

			<StackPanel DockPanel.Dock="Top" Classes="flow-vertical">
				<Label>Build server</Label>
				<TextBox Name="txtServer" Text="{Binding Project.TetrifactServerAddress}"></TextBox>
			</StackPanel>

			<StackPanel DockPanel.Dock="Top" Classes="flow-vertical">
				<Label>Executable name</Label>
				<TextBox Name="txtExecutableName" Text="{Binding Project.ApplicationExecutableName}"></TextBox>
			</StackPanel>

			<StackPanel DockPanel.Dock="Top" Classes="flow-vertical">
				<Label Content="Number of packages to sync" />
				<TextBox Name="txtSyncCount" Text="{Binding Project.PackageSyncCount}" />
			</StackPanel>

			<StackPanel DockPanel.Dock="Top" Classes="flow-vertical">
				<CheckBox Name="cbAutoDownload" Content="Download latest automatically" IsChecked="{Binding Project.AutoDownload}" />
			</StackPanel>

			<StackPanel DockPanel.Dock="Top" Classes="flow-vertical">
				<Label>Description (optional)</Label>
				<TextBox Name="txtDescription" Text="{Binding Project.Description}"></TextBox>
			</StackPanel>

			<ScrollViewer DockPanel.Dock="Top" Height="290">
				<DockPanel>
					<StackPanel DockPanel.Dock="Top" Classes="flow-vertical">
						<Label Classes="flow-vertical" FontWeight="Bold">Require packages to have tags:</Label>
						<local:TagsList Name="requiredTagsList" DockPanel.Dock="Top" HorizontalAlignment="Stretch" />
					</StackPanel>

					<StackPanel DockPanel.Dock="Top" Classes="flow-vertical">
						<Label Classes="flow-vertical" FontWeight="Bold">Ignore packges with tags:</Label>
						<local:TagsList Name="blockedTagsList" DockPanel.Dock="Top" HorizontalAlignment="Stretch" />
					</StackPanel>
				</DockPanel>
			</ScrollViewer>
		</DockPanel>

	</Grid>
</Window>
