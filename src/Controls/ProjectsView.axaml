<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 			 x:CompileBindings="True"
			 mc:Ignorable="d" 
			 d:DesignWidth="400" 
			 d:DesignHeight="250"
			 xmlns:local="clr-namespace:TetrifactClient;assembly=TetrifactClient"
    		 x:Class="TetrifactClient.ProjectsView"
			 xmlns:vm="using:TetrifactClient"
 			 x:DataType="vm:ProjectsViewModel">
	
	<StackPanel Orientation="Vertical">
		<StackPanel Orientation="Horizontal">
			<TextBlock>
				Projects :
			</TextBlock>
			<Button Click="OnNewProject">
				+
			</Button>
		</StackPanel>

		<ListBox Name="listProjects" ItemsSource="{Binding Projects}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{Binding Name}"/>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

		<TextBlock Text="No projects added yet"
				   IsVisible="{Binding Projects, 
                       Converter={x:Static local:CollectionConverter.IsEmpty}}"/>
	</StackPanel>
</UserControl>
