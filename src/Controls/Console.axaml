<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TetrifactClient.Controls.Console"
 		xmlns:vm="using:TetrifactClient"
 		x:DataType="vm:ConsoleViewModel"
		Title="Console">
	<DockPanel>
		<TextBlock DockPanel.Dock="Top" Text="Console" Classes="header1" />
		<ListBox DockPanel.Dock="Top" HorizontalAlignment="Stretch" Name="listProjects" ItemsSource="{Binding Items}">
			<ListBox.ContextMenu>
				<ContextMenu Opening="ContextMenu_Opening" Name="gridContextMenu">
					<MenuItem Header="Copy" Name="mnuDownload" Click="OnCopyConsoleItem" />
				</ContextMenu>
			</ListBox.ContextMenu>
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" Text="{Binding}" TextWrapping="Wrap" />
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</DockPanel>
</Window>
